<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Teaser"
          sling:resourceType="cq/gui/components/authoring/dialog"
          helpPath="https://www.adobe.com/go/aem_cmp_teaser_v1"
          extraClientlibs="[core.wcm.components.teaser.v1.editor]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            granite:class="cmp-teaser__editor">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <linkURL
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Teaser link."
                                    fieldLabel="Link"
                                    name="./linkURL"
                                    required="{Boolean}true"
                                    rootPath="/content"/>
                            <file
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                    allowUpload="{Boolean}false"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldLabel="Image asset"
                                    fileNameParameter="./fileName"
                                    fileReferenceParameter="./fileReference"
                                    mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                    multiple="{Boolean}false"
                                    name="./file"
                                    title="Upload Image Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"
                                    required="{Boolean}true"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <value
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Teaser's title."
                                            fieldLabel="Title"
                                            name="./jcr:title"
                                            value="${cqDesign._jcr_description}"
                                            granite:hide="${cqDesign.hideTitle}"/>
                                    <fromPage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="When checked, populate the title from the linked page."
                                            text="Get title from page"
                                            name="./titleValueFromPage"
                                            value="{Boolean}true"
                                            uncheckedValue="{Boolean}false"
                                            checked="{Boolean}true"
                                            granite:hide="${cqDesign.hideTitle}"/>
                                </items>
                            </title>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <value
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldDescription="The Teaser's description."
                                            fieldLabel="Description"
                                            name="./jcr:description"
                                            granite:hide="${cqDesign.hideDescription}"/>
                                    <fromPage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="When checked, populate the description from the linked page."
                                            text="Get description from page"
                                            name="./descriptionValueFromPage"
                                            value="{Boolean}true"
                                            uncheckedValue="{Boolean}false"
                                            checked="{Boolean}true"
                                            granite:hide="${cqDesign.hideDescription}"/>
                                </items>
                            </description>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
