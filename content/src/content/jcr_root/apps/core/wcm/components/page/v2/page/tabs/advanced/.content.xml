<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	cq:showOnCreate="{Boolean}true" jcr:primaryType="nt:unstructured"
	jcr:title="Advanced"
	sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
	<items jcr:primaryType="nt:unstructured"
		sling:hideChildren="[configuration,templates,authenticationrequirement,export]">
		<column jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/coral/foundation/container">
			<items jcr:primaryType="nt:unstructured"
				sling:hideChildren="[language,isLanguageRoot,redirect,designs,alias]">				
				<customMetaTags jcr:primaryType="nt:unstructured"
					jcr:title="SEO Custom Meta Tags"
					sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
					<items jcr:primaryType="nt:unstructured">
						<column jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/coral/foundation/container">
							<items jcr:primaryType="nt:unstructured">
								<seocustomtags jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
									composite="{Boolean}true">
									<field jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/container"
										name="./seocustomtags">
										<items jcr:primaryType="nt:unstructured">
											<metaName jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldLabel="Meta Name" multiple="{Boolean}false"
												name="./customTagName" value="Name" />
											<metaValue jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldLabel="Meta Value" multiple="{Boolean}false"
												name="./customTagValue" value="Value" />
										</items>
									</field>
								</seocustomtags>
							</items>
						</column>
					</items>
				</customMetaTags>
			</items>
		</column>
	</items>
</jcr:root>
